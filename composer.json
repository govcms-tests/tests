{
    "name": "govcms/tests",
    "description": "GovCMS Drupal Distribution Tests.",
    "license": "GPL-2.0-or-later",
    "require": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "drevops/behat-format-progress-fail": "^1.0",
        "drevops/behat-screenshot": "^1.2",
        "drevops/behat-steps": "^1.4",
        "drevops/git-artifact": "^0.5.0",
        "drupal/coder": "^8.3",
        "drupal/drupal-extension": "^4.2",
        "php-parallel-lint/php-console-highlighter": "^1.0.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phploc/phploc": "^7.0",
        "phpmd/phpmd": "^2.10",
        "sebastian/phpcpd": "^6.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "preferred-install": "dist",
        "secure-http": false,
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "extra": {
        "branch-alias": {
            "dev-3.x-develop": "3.x-dev"
        }
    },
    "scripts": {
        "nuke": "rm -r -f composer.lock bin vendor"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
